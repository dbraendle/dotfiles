[user]
    name = PLACEHOLDER_NAME
    email = PLACEHOLDER_EMAIL

[core]
    editor = code --wait
    autocrlf = input

[init]
    defaultBranch = main

[pull]
    rebase = false

[push]
    default = simple
    autoSetupRemote = true

[color]
    ui = auto

[alias]
    # Status und Info
    s = status
    st = status -s
    
    # Add und Commit
    a = add
    aa = add --all
    c = commit
    cm = commit -m
    ca = commit -am
    amend = commit --amend
    
    # Checkout und Branch
    co = checkout
    cob = checkout -b
    b = branch
    ba = branch -a
    bd = branch -d
    
    # Push und Pull
    p = push
    pf = push --force-with-lease
    pl = pull
    plo = pull origin
    pom = pull origin main
    
    # Log und History
    l = log --oneline
    lg = log --oneline --decorate --graph
    lga = log --oneline --decorate --graph --all
    ll = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    
    # Diff
    d = diff
    dc = diff --cached
    
    # Stash
    ss = stash save
    sp = stash pop
    sl = stash list
    
    # Utilities
    unstage = reset HEAD --
    undo = reset --soft HEAD~1
    aliases = config --get-regexp alias
    
[credential]
    helper = osxkeychain