# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Package files (uncomment if you want to follow community standards)
# [{package.json,*.yml,*.yaml}]
# indent_style = space
# indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false